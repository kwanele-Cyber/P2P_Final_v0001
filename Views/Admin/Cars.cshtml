@model P2P_Final_v0._001.Models.Car
@using P2P_Final_v0._001
@{
    ViewBag.Title = "ManageCars";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

}
<br />
<br />
<div class="hero">
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-sm-4">
                    <div>
                        <h2 class="text-warning">List of Cars</h2>
                        @if (@ViewBag.Message != null)
                        {
                            <div class="form-group">
                                <div class="col-md-10 text-danger">
                                    @ViewBag.Message
                                </div>
                            </div>
                        }
                    </div>
                    <hr />
                    <div class="card">
                        <div class="container">
                            <div class="row">
                                <img class="col-sm-12" src="~/Bundle/img/car-rent-3.png" />
                            </div>
                            <div class="row">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Make, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Make, new { @class = "col-sm-12" })
                                            </div>
                                            <div>
                                                @Html.ValidationMessageFor(a => a.Make, "", new { @class = "col-sm-12 text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Model, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Model, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Model)
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-12">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Varient, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Varient, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Varient)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.BodyType, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.BodyType, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.BodyType, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Mileage, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Mileage, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Mileage, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Color, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Color, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Color, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.FuelType, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.FuelType, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.FuelType, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.NumberPlate, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.NumberPlate, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.NumberPlate, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Transmission, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Transmission, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Transmission, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Description, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Description, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Description, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Location, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Location, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Location, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Address, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Address, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Address, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(a => a.Price, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.EditorFor(a => a.Price, new { @class = "col-sm-12" })
                                            </div>
                                            <div class="col-sm-12">
                                                @Html.ValidationMessageFor(a => a.Price, "", new { @class = "col-sm-12" })
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-outline-primary col-sm-12" style="margin:5px 5px 5px 5px;">Add</button>
                                        </div>
                                    </div>
                                    <br />
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div>
                        <h2 class="text-danger">List of Cars</h2>
                    </div>
                    <hr />
                    <div class="card">
                        <div class="container m-3">
                            <div class="row">
                                @foreach (var car in ViewBag.Cars)
                                {
                                    <img class="col-sm-6" src="~/Bundle/img/car-rent-1.png" alt="carImage" />
                                    <div class="col-sm-6 align-content-center">
                                        <div class="row-cols-2">
                                            <div class="col">
                                                <br />
                                                <div><strong>@car.carID</strong></div>
                                                <div><strong>@car.Make </strong></div>
                                                <div><strong>@car.Model</strong></div>
                                                <div><strong>@car.Varient</strong></div>
                                                <div><strong>@car.BodyType</strong></div>
                                                <div><strong>@car.FuelType</strong></div>
                                            </div>
                                            <div class="col">
                                                <br />
                                                <div><strong>@car.Location </strong></div>
                                                <div><strong>@car.Address</strong></div>
                                                <div><strong>@car.Varient</strong></div>
                                                <div><strong>@car.Price</strong></div>
                                                <div><strong>@car.Mileage</strong></div>
                                            </div>
                                        </div>
                                        <div><strong>@car.Description</strong></div>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    @Html.ActionLink("EditCar", "EditCar", new { id = car.carID }) |
                                                    @Html.ActionLink("Details", "CarDetails", new { id = car.carID }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = car.carID })
                                                </div>
                                                <div class="col-md-6">
                                                    <button class="btn col-md-12 btn-outline-danger">Remove</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
