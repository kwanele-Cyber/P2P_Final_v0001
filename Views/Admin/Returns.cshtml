@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
 <div class="container">
     <div class="row">
         <div class="col-md-3">
             <!-- Form -->
             <div class="container-fluid">
                 <div class="row">
                     <div class="form-group">
                         <label>Starting Milliage:</label><br />
                         <input class="form-control" type="number"/>
                     </div>
                     <div class="form-group">
                         <label>Ending Milliage:</label><br />
                         <input class="form-control" type="number" />
                     </div>
                     <div class="form-group">
                         <label>Return Date:</label><br />
                         <input class="form-control" type="date"/>
                     </div>
                     <div class="form-group">
                         <label>Return Time:</label><br />
                         <input class="form-control" type="time" />
                     </div>
                     <div class="form-group"><button class="btn btn-outline-primary form-control" type="submit">Evaluate</button></div>
                 </div>
                 <hr />
                 <div class="row">
                     <div class="form-group">
                         <label>Rental Cost:</label>
                         <div class="text-danger">R <span>00,00</span></div>
                     </div>
                     <div class="form-group">
                         <label>Penalty(Time):</label>
                         <div class="text-danger">R <span>00,00</span></div>
                     </div>
                     <div class="form-group">
                         <label>Total</label>
                         <div class="text-danger">R <span>00,00</span></div>
                     </div>
                 </div>
             </div>
         </div>
         <div class="col-md-9">
             <!-- Search -->
             <div class="container">
                 <div class="row">
                     <div class="col-md-12">
                         <div class="row">
                         <div class="col-md-10"><input class="form-control p-4" type="text" /></div>
                         <div class="col-md-2"><button class="btn btn-outline-secondary">Search</button></div>
                         </div>
                     </div>
                 </div>
             </div>

             <!-- List of Returns -->
             <div class="row">#
                
             </div>
         </div>
     </div>
 </div>



